<% @title='View Cycle' %>
<div  id='help-me',  data-summit='3'></div>
<%= render 'show_help' %>
<%= render 'bubbles/search_account' %>

<div class='grid  Shell  u-padding-1-12'>

  <div class='col-23-24  grid-row  bottom-spacer'>    <!-- 1st column -->

    <div class='col-5-24  grid-row  bottom-half-line-spacer  grid-label'>
      Name
    </div>
    <div class='col-14-24 bottom-half-line-spacer'><%= @cycle.name %></div>
    <div class='col-5-24  grid-row  bottom-half-line-spacer  grid-label'>
      Order
    </div>
    <div class='col-3-24  bottom-half-line-spacer'><%= @cycle.order %></div>

    <% if @cycle.monthly? %>
      <%= render 'due_ons/monthly', cycle: @cycle %>
    <% else %>
      <%= render 'due_ons/term', cycle: @cycle %>
    <% end %>
  </div>

  <div class='col-1-24'>  <!-- 2nd column -->
    <%= edit_link @cycle %>
    <div class='Bubble-point-right'>
      <%= render 'bubbles/help_2',  pic: 'fa fa-edit  fa-lg',  line1:'Cycle Edit Button',  line2: "Use to edit this cycle's details" %>
    </div>
  </div>
</div> <!-- grid  Shell  u-padding-1-100-->

<% @title='Blue Invoicing' %>
<%= render 'bubbles/search_account' %>

<div class='grid  Shell  u-padding-1-25'>

  <div class='col-4-24  grid-row  r-align'> &nbsp;</div>
  <div class='col-12-24'>
    &nbsp;
      <div  id='help-me', data-skip='0',  data-pay='0', class='Bubble-down'>
        <%= render 'bubbles/pt_down_view', line1: 'View Invoice Run Details', line2: "Click on a run row for that run's details" %>
      </div>
  </div>
  <div class='col-2-24'>
    &nbsp;
    <div class='Bubble-anchor'><%= render 'bubbles/help_3_pay_box', line1:'Print Button', line2: 'Prints complete run of invoices' %></div>

  </div>
  <div class='col-2-24'>
    &nbsp;
    <div class='Bubble-anchor'><%= render 'bubbles/pt_down_edit', iconstring: "fa fa-edit  fa-lg  help-icon", line1:'2nd Invoice Button', line2: 'Creates blue run of invoices' %></div>
  </div>
  <div class='col-1-24'>&nbsp;
    <div class='Bubble-anchor'> <%= render 'bubbles/pt_down_delete', line2: 'Deletes all invoices in this run' %></div>
  </div>

 <%= render 'invoicings/invoicing_header' %>
 <% @invoicings.each do |invoicing| %>
   <% invoicing_dec = InvoicingIndexDecorator.new invoicing %>
   <div title='View run list' class='table-row' data-link='<%= invoicing_path(invoicing) %>'>

     <div class='col-5-24  grid-row  bottom-spacer  inherit-row'>
       <%= invoicing_dec.property_range %>
     </div>
     <div class='col-5-24  bottom-spacer  inherit-row'>
       <%= invoicing_dec.created_at %>
     </div>
     <div class='col-7-24  bottom-spacer  inherit-row'>
       <%= invoicing_dec.period_between %>
     </div>
     <div class='col-1-24  bottom-spacer'><%= print_link path: print_run_path(invoicing), title: 'Print Last Invoice', disabled: !invoicing.deliverable? %></div>
     <div class='col-1-24  bottom-spacer'>&nbsp;</div>
     <div class='col-1-24  bottom-spacer'>
       <%= add_link path: [:edit, invoicing], title: 'Send New Invoice (Create Red Invoice)', css: 'Button  ButtonIcon-action' %>
     </div>
     <div class='col-1-24  bottom-spacer'>&nbsp;</div>
     <div class='col-1-24  bottom-spacer'><%= delete_link path: blue_invoicing_path(invoicing) %></div>
   </div>
 <% end %>
 <%= render 'information/lacking', objects: @invoicings, message: 'No invoicings waiting for a red invoice.' %>
</div>
